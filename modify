    jmp displayAfter

displayBook3:
    mov ah, 09h
    lea dx, mainmenu
    int 21h

    call newline

    mov ah, 09h
    lea dx, display1
    int 21h

    mov ah, 09h
    lea dx, book3
    int 21h

