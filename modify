    lea dx, display1
    int 21h

    mov ah, 09h
    lea dx, book2
    int 21h

    call newline

    mov ah, 09h
    lea dx, display2
    int 21h

    mov ah, 09h
    lea dx, category2
    int 21h

    call newline

    mov ah, 09h
